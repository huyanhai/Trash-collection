.me-content {
  background: #F2F2F2;
  padding: 24rpx;
  box-sizing: border-box;
  width: 100%;
  min-height: 100vh;
  overflow: hidden;
  position: relative;
}
.me-content .top-bg {
  position: absolute;
  height: 441rpx;
  top: 0;
  width: 750rpx;
  left: 0;
}
.me-content .user-info {
  position: relative;
  z-index: 10;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-pack: justify;
  -webkit-justify-content: space-between;
          justify-content: space-between;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
  padding: 60rpx 20rpx 60rpx 20rpx;
}
.me-content .user-info .user-img {
  width: 120rpx;
  height: 120rpx;
  border-radius: 120rpx;
}
.me-content .user-info .col-right {
  line-height: 48rpx;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-orient: vertical;
  -webkit-box-direction: normal;
  -webkit-flex-direction: column;
          flex-direction: column;
  text-align: right;
}
.me-content .user-info .col-right .name {
  font-size: 34rpx;
  color: #FFFFFF;
}
.me-content .user-info .col-right .address {
  font-size: 34rpx;
  color: #FFFFFF;
}
.me-content .more-action {
  border-radius: 20rpx;
  background: #FFFFFF;
  height: 817rpx;
  position: relative;
  z-index: 10;
  overflow: hidden;
}
.me-content .more-action .xbg {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 153rpx;
  overflow: hidden;
}
.me-content .more-action .btbg {
  position: absolute;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 235rpx;
  overflow: hidden;
}
.me-content .more-action .integral {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-pack: justify;
  -webkit-justify-content: space-between;
          justify-content: space-between;
  position: relative;
  z-index: 10;
  margin: 40rpx 40rpx;
}
.me-content .more-action .integral .col-left {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
  font-size: 34rpx;
  color: #666666;
}
.me-content .more-action .integral .col-left .ye {
  width: 34rpx;
  height: 34rpx;
  margin-right: 20rpx;
}
.me-content .more-action .integral .col-right {
  color: #2B8349;
  font-size: 36rpx;
}
.me-content .more-action .links {
  margin-top: 70rpx;
}
.me-content .more-action .links .link {
  height: 100rpx;
  line-height: 100rpx;
  border-bottom: 2rpx solid #F1F1F1;
  padding: 0 20rpx;
}
.me-content .more-action .links .link .left {
  font-size: 34rpx;
