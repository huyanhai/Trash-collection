.question-content {
  background: #FFFFFF;
  box-sizing: border-box;
  width: 100%;
  min-height: 100vh;
  position: relative;
  overflow: hidden;
}
.question-content .bg {
  position: absolute;
  top: 0rpx;
  left: 0;
  width: 750rpx;
  height: 257rpx;
}
.question-content .box {
  width: 650rpx;
  height: 980rpx;
  border-radius: 20rpx;
  background: #FFFFFF;
  margin: 60rpx auto 0 auto;
  position: relative;
  z-index: 10;
  box-shadow: 0 0 10rpx rgba(0, 0, 0, 0.1);
}
.question-content .box .title {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  height: 80rpx;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
  -webkit-box-pack: justify;
  -webkit-justify-content: space-between;
          justify-content: space-between;
  border-bottom: 2rpx solid #F3F3F3;
  padding: 0 24px;
  -webkit-box-flex: 0;
  -webkit-flex: 0 0 auto;
          flex: 0 0 auto;
}
.question-content .box .title .col-left {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
}
.question-content .box .title .col-left::before {
  display: block;
  content: "";
  width: 4rpx;
  height: 28rpx;
  background: #2B8349;
  margin-right: 12rpx;
}
.question-content .box .title .col-right .d {
  color: #2B8349;
}

