.question-content {
  background: #FFFFFF;
  box-sizing: border-box;
  width: 100%;
  min-height: 100vh;
  position: relative;
  overflow: hidden;
}
.question-content .bg {
  position: absolute;
  top: 0rpx;
  left: 0;
  width: 750rpx;
  height: 257rpx;
}
.question-content .box {
  width: 650rpx;
  height: 980rpx;
  border-radius: 20rpx;
  background: #FFFFFF;
  margin: 60rpx auto 0 auto;
  position: relative;
  z-index: 10;
  box-shadow: 0 0 10rpx rgba(0, 0, 0, 0.1);
  overflow: hidden;
}
.question-content .box .c-bg {
  height: 325rpx;
  width: 650rpx;
  position: absolute;
  top: 0;
  left: 0;
}
.question-content .box .complate-info {
  width: 100%;
  text-align: center;
  position: relative;
  z-index: 10;
  margin-top: 40rpx;
}
.question-content .box .complate-info .title {
  font-size: 36rpx;
  color: #FFFFFF;
  display: block;
  margin-bottom: 90rpx;
}
.question-content .box .complate-info .score {
  font-size: 36rpx;
  color: #FFFFFF;
  display: block;
}
.question-content .box .details {
  position: relative;
  z-index: 10;
  margin-top: 140rpx;
  padding: 0 60rpx;
}
.question-content .box .details .item {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-pack: justify;
  -webkit-justify-content: space-between;
          justify-content: space-between;
  line-height: 60rpx;
  height: 60rpx;
  margin-bottom: 20rpx;
}
.question-content .box .details .item .col-l {
  font-size: 30rpx;
  color: #666666;
}
.question-content .box .details .item .col-r.yellow {
  color: #D79814;
}
.question-content .box .details .item .col-r.green {
  color: #2B8349;
}
.question-content .box .tips {
  position: absolute;
  width: 100%;
  bottom: 120rpx;
  font-size: 28rpx;
  color: #D79814;
  text-align: center;
}

