<scroll-view class="integral-content" scroll-y="{{true}}" data-event-opts="{{[['scrolltolower',[['scrolltolower',['$event']]]]]}}" bindscrolltolower="__e"><block wx:for="{{list}}" wx:for-item="item" wx:for-index="index"><view class="item"><view class="col-left"><block wx:if="{{item.type==='0'}}"><text class="title">投放垃圾</text></block><block wx:if="{{item.type==='1'}}"><text class="title">每日知识竞答</text></block><block wx:if="{{item.type==='3'}}"><text class="title">活动积分</text></block><block wx:if="{{item.type==='4'}}"><text class="title">其他</text></block><block wx:if="{{item.type==='2'}}"><text class="title">{{item.goods}}</text></block><text class="date">{{item.createTime||"暂无日期"}}</text></view><block wx:if="{{item.type==='2'}}"><view class="num">{{''+item.scoring+''}}</view></block><block wx:else><view class="num add">{{'+'+item.scoring+''}}</view></block></view></block></scroll-view>