.content {
  background: #FFFFFF;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-orient: vertical;
  -webkit-box-direction: normal;
  -webkit-flex-direction: column;
          flex-direction: column;
}
.notice {
  position: relative;
  height: 60rpx;
  line-height: 60rpx;
  -webkit-box-flex: 0;
  -webkit-flex: 0 0 auto;
          flex: 0 0 auto;
}
.notice .ui-img {
  width: 100%;
  height: 60rpx;
  position: absolute;
  top: 0;
}
.notice .info {
  height: 60rpx;
  line-height: 60rpx;
  font-size: 28rpx;
  color: #FFFFFF;
  position: relative;
  z-index: 10;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
  -webkit-box-pack: center;
  -webkit-justify-content: center;
          justify-content: center;
}
.notice .info .ui-icon {
  width: 30rpx;
  height: 30rpx;
  margin-right: 10rpx;
  display: block;
}
.box {
  -webkit-box-flex: 1;
  -webkit-flex: 1 0 auto;
          flex: 1 0 auto;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-orient: vertical;
  -webkit-box-direction: normal;
  -webkit-flex-direction: column;
          flex-direction: column;
}
.box .tab {
  -webkit-box-flex: 0;
  -webkit-flex: 0 0 auto;
          flex: 0 0 auto;
  height: 90rpx;
  line-height: 90rpx;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
  -webkit-box-pack: center;
  -webkit-justify-content: center;
          justify-content: center;
  border-bottom: 2rpx solid #E7E7E7;
  box-sizing: border-box;
}
.box .tab .item {
  width: 25%;
  font-size: 32rpx;
  color: #333333;
  text-align: center;
}
.box .tab .item.active {
  border-bottom: 2rpx solid #2B8349;
  color: #2B8349;
}
.box .container .info {
  position: relative;
  margin: 24rpx;
  overflow: hidden;
}
.box .container .info.yf, .box .container .info.qt {
  width: 702rpx;
  height: 220rpx;
}
.box .container .info.khs {
  width: 702rpx;
  height: 260rpx;
}
.box .container .info.yh {
  width: 702rpx;
  height: 260rpx;
}
.box .container .info .info-img {
  width: 100%;
  height: 100%;
}
.box .container .info .text-info {
  position: absolute;
  width: 520rpx;
  top: 30rpx;
  left: 30rpx;
  line-height: 36rpx;
}
.box .container .info .text-info .title {
  font-size: 34rpx;
  color: #FFFFFF;
  margin-bottom: 10rpx;
}
.box .container .info .text-info .text {
  font-size: 28rpx;
  color: #FFFFFF;
}
.box .container .demand {
  margin: 0 24rpx;
  line-height: 45rpx;
  border-bottom: 2rpx solid rgba(72, 115, 88, 0.1);
  padding: 0 24rpx 24rpx 24rpx;
}
.box .container .demand .title {
  font-size: 34rpx;
  color: #333333;
  font-weight: bold;
}
.box .container .demand .text {
  font-size: 30rpx;
  color: #666666;
}
.box .container .details {
  margin: 24rpx 24rpx 0 24rpx;
  overflow: hidden;
}
.box .container .details.yf .item {
  color: #487358;
}
.box .container .details.yf .item:nth-child(2n-1) {
  background: #F6F9F4;
}
.box .container .details.qt .item {
  color: #736D48;
}
.box .container .details.qt .item:nth-child(2n-1) {
  background: #F9F8F4;
}
.box .container .details.khs .item {
  color: #485973;
}
.box .container .details.khs .item:nth-child(2n-1) {
  background: #F4F7F9;
}
.box .container .details.yh .item {
  color: #734848;
}
.box .container .details.yh .item:nth-child(2n-1) {
  background: #F9F4F4;
}
.box .container .details .title {
  font-size: 34rpx;
  color: #333333;
  margin: 24rpx 0;
  padding: 0 24rpx;
  font-weight: bold;
  display: none;
}
.box .container .details .title.active {
  display: block;
}
.box .container .details .item {
  font-size: 30rpx;
  color: #666666;
  width: 100%;
  height: 60rpx;
  line-height: 60rpx;
  padding: 0 24rpx;
}

